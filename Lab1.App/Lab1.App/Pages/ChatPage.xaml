<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    Title="Chat"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab1.App.Pages.ChatPage">
    <ContentPage.Content>

        <StackLayout Padding="15" Spacing="5"
                VerticalOptions="CenterAndExpand"    >

            <Label Text="Usuario:" TextColor="Red" FontAttributes="Bold"></Label>
            <Entry x:Name="txtUsuario"></Entry>

            <Label Text="Mensaje:" TextColor="Red" FontAttributes="Bold"></Label>
            <Entry x:Name="txtMensaje" HeightRequest="200"></Entry>

            <Button Text="Enviar"
                Clicked="btnEnviar_Clicked"
                x:Name="btnEnviar" BackgroundColor="Green" />

        </StackLayout>

    </ContentPage.Content>
</ContentPage>